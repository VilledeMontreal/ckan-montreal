<ul>
  {% for package in result.results  %}
  <li class="mt-10 shadow bg-gray-100 px-4 py-3">
    <div>
      <h3 class="text-lg font-semibold">
        <a class="text-gray-700 " href="/{{ package.organization.name or 'dataset' }}/{{ package.name }}">{{ package.title or package.name }}</a>
      </h3>

      <div class="leading-relaxed text-lg mt-2">
        {% if package.readmeSnippet %}
        <p>
          {{ package.readmeSnippet }}
        </p>
        {% elif package.readmeHtml %}
        <p>
          {{ package.readmeHtml|safe }}
        </p>
        {% elif package.description %}
        <p>
          {% if package.description|length > 200 %}
            {{ package.description|truncate(200) }}
          {% else %}
            {{ package.description }}
          {% endif %}
        </p>
        {% endif %}
      </div>
    </div>

    <ul class="mt-2">
      {% for resource in package.resources %}
      {% if resource.format %}
      <li class="inline ">
        <a href="/{{ package.organization.name or 'dataset' }}/{{ package.name }}" data-format="{{ resource.format }}" class="bg-gray-600 text-lg text-white rounded-full px-3 py-1 hover:bg-primary">{{ resource.format }}</a>
      </li>
      {% endif %}
      {% endfor %}
    </ul>
  </li>
  {% endfor %}
</ul>

